pkgname=ptserver-nginx
pkgver=0.0.1
pkgrel=0
pkgdesc="Nginx configuration files for all my services under ptserver"
url="https://git.sr.ht/~josegpt/ptserver-nginx"
arch="noarch"
license="BSD-2-Clause"
depends="nginx"
replaces="nginx"
pkgusers="nginx"
pkggroups="www-data"
source="$pkgname-v$pkgver.tar.gz::https://git.sr.ht/~josegpt/ptserver-nginx/archive/main.tar.gz"
builddir="$srcdir/$pkgname-main"
install="$pkgname.pre-deinstall"
options="$options !check"

build() {
	:
}

package() {
	install -Dm644 nginx.conf "$pkgdir"/etc/nginx/nginx.conf
}

