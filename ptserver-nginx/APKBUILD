pkgname=ptserver-nginx
pkgver=0.0.2
pkgrel=0
pkgdesc="Nginx configuration files for all my services under ptserver"
url="https://git.sr.ht/~josegpt/ptserver-nginx"
arch="noarch"
license="BSD-2-Clause"
depends="nginx"
replaces="nginx"
pkgusers="nginx"
pkggroups="www-data"
source="nginx.conf 80.conf 443.conf web.conf"
install="$pkgname.pre-deinstall"
options="$options !check"

build() {
	:
}

package() {
	install -Dm644 nginx.conf "$pkgdir"/etc/nginx/nginx.conf
	install -Dm644 80.conf "$pkgdir"/etc/nginx/partials.d/80.conf
	install -Dm644 443.conf "$pkgdir"/etc/nginx/partials.d/443.conf
	install -Dm644 web.conf "$pkgdir"/etc/nginx/partials.d/web.conf
	install -dm750 -onginx -gwww-data "$pkgdir"/var/www
}

