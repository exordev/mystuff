	# 0 0 * * * acme-client josegpt.com && rcctl reload httpd
	# 0 0 * * * acme-client mtaveras.com && rcctl reload httpd
	# 0 0 * * * acme-client redhex.{org,net,dev} && rcctl reload httpd
